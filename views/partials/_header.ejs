   <% } else {%> 
    Logged in as <%= user.email %>!
     <form class="nav-item nav-link"  action="/logout %>" method="POST">
      <button type="submit" style="background-color:rgba(253, 253, 253, 0); border-color:rgb(0, 0, 0); color:rgb(5, 5, 6)" class="btn btn-primary">Logout</button>  
     </form>
     <% } %>
